@model ShoppingCartVM
@using eTicket.Data.ViewModels

@{
    ViewData["Title"] = "Tóm tắt giỏ hàng";
}

<div class="mt-5" style="display: flex; justify-content:center; align-items:center; width:100%">
    <div class="w-75">
        <div class="text-center">
            <h2>Tóm tắt giỏ hàng của bạn</h2>
        </div>
        <table class="table text-white">
            <thead>
                <tr>
                    <th>Số lượng</th>
                    <th>Vé phim</th>
                    <th>Giá</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">
                            @item.Amount
                        </td>
                        <td class="align-middle">
                            @item.Movie.Name
                        </td>
                        <td class="align-middle">
                            @item.Movie.Price.ToString("c0", new System.Globalization.CultureInfo("vi-VN"))
                        </td>
                        <td class="align-middle">
                            @((item.Amount * item.Movie.Price).ToString("c0", new System.Globalization.CultureInfo("vi-VN")))
                        </td>
                        <td class="align-middle">
                            <a class="text-danger m-2" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart" asp-route-id="@item.Movie.Id" title="Xóa khỏi giỏ hàng">
                                <i class="bi bi-cart-dash"></i>
                            </a>

                            <a class="text-success m-2" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@item.Movie.Id" title="Thêm vào giỏ hàng">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Tổng cộng: </b></td>
                    <td>@Model.ShoppingCartTotal.ToString("c0", new System.Globalization.CultureInfo("vi-VN"))</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-center d-flex justify-content-center align-items-center" style="gap: 25px">
            <a asp-controller="Orders" asp-action="CompleteOrder" class="btn btn-primary">
                Thanh toán tiền mặt
            </a>

            <a asp-controller="Movies" asp-action="Index" class="btn btn-success text-decoration-none">
                Thêm sản phẩm khác
            </a>
        </div>
    </div>
</div>
