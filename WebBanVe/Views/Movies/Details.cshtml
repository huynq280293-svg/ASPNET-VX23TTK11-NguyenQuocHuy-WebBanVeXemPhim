@model Movie
@{
    ViewData["Title"] = "Chi tiết phim";
}
<div class="row m-2">
    <div class="col-md-8 offset-2 mb-3 d-flex justify-content-center" style="background-color: #2b2b2b">
        <div class="card mb-3" style="background-color: #2b2b2b; border:none">
            <div class="row g-0" style="border:none">
                <div class="col-md-12">
                    <div class="text-white" style="background-color: #2b2b2b">
                        <p class="text-dark" style="background-color: #2b2b2b">
                            <h5 class="card-title text-white m-4" style="background-color: #2b2b2b">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageURL" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Rạp chiếu: </b>
                            <a asp-controller="Cinemas" asp-action="Details" asp-route-id="@Model.CinemaId" style="text-decoration:none">
                                @Model.Cinema.Name
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Nhà sản xuất: </b>
                            <a asp-controller="Producers" asp-action="Details" asp-route-id="@Model.ProducerId" style="text-decoration:none">
                                @Model.Producer.FullName
                            </a>
                        </p>
                        <p class="card-text"><b>Thể loại: </b>@Model.MovieCategory</p>
                        <p class="card-text"><b>Ngày khởi chiếu: </b>@Model.StartDate.ToString("dd/MM/yyyy")</p>
                        <p class="card-text"><b>Ngày kết thúc: </b>@Model.EndDate.ToString("dd/MM/yyyy")</p>
                        <p class="card-text">
                            <b>Trạng thái: </b>
                            @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)
                            {
                                <span class="badge bg-success text-white">ĐANG CHIẾU</span>
                            }
                            else if (DateTime.Now > Model.EndDate)
                            {
                                <span class="badge bg-danger text-white">HẾT HẠN</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">SẮP CHIẾU</span>
                            }
                        </p>

                        <p class="card-text">
                            <b>Diễn viên:</b>
                            <hr />
                            <div class="d-flex gap-4">
                                @foreach (var actor in Model.Actors_Movies)
                                {
                                    <div class="column text-center">
                                        <img class="border-info rounded-circle" src="@actor.Actor.ProfilePictureURL" style="max-width: 150px" />
                                        <br />
                                        <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.ActorId" style="text-decoration:none">
                                            @actor.Actor.FullName
                                        </a>
                                    </div>
                                }
                            </div>
                        </p>

                    </div>
                </div>
                <div class="col-md-12 m-1">
                    <div class="card-footer" style="border:none">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right m-2" asp-action="Index">
                                Quay lại danh sách
                            </a>
                            <a class="btn btn-success text-white @((DateTime.Now > Model.EndDate) ? "disabled" : "")"
                               asp-controller="Orders"
                               asp-action="AddToShoppingCart"
                               asp-route-id="@Model.Id">
                                <i class="bi bi-cart-plus"></i> Đặt vé (Giá @Model.Price.ToString("c0", new System.Globalization.CultureInfo("vi-VN")))
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
