@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Danh sách phim";
}

<div class="row">
    <div class="col-md-10 offset-md-1">

        <h2 class="text-center text-white mb-4">Quản lý phim</h2>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Ảnh</th>
                    <th>Tên phim</th>
                    <th>Giá vé</th>
                    <th>Rạp chiếu</th>
                    <th>Nhà sản xuất</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Thể loại</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Hành động</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center text-white">
                        <td class="align-middle">
                            <img src="@item.ImageURL" alt="@item.Name" style="max-width: 120px; border-radius: 8px;" />
                        </td>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Price.ToString("c")</td>
                        <td class="align-middle">@item.Cinema?.Name</td>
                        <td class="align-middle">@item.Producer?.FullName</td>
                        <td class="align-middle">@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td class="align-middle">@item.EndDate.ToString("dd/MM/yyyy")</td>
                        <td class="align-middle">@item.MovieCategory</td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i> Xoá
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div style="position: fixed; right: 25px; bottom: 25px; z-index:10">
        <a asp-action="Create" class="btn btn-success text-decoration-none">
            <i class="bi bi-plus-circle"></i> Thêm phim mới
        </a>
    </div>
}
